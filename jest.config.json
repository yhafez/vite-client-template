{
	"verbose": true,
	"testEnvironment": "jsdom",
	"setupFilesAfterEnv": ["<rootDir>/config/jest/jest-setup.ts"],
	"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)$",
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
	"moduleDirectories": ["node_modules", "src"],
	"moduleNameMapper": {
		"\\.(css|less|scss)$": "identity-obj-proxy",
		"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/__mocks__/fileMock.ts"
	},
	"resolver": "jest-pnp-resolver",
	"testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/dist/"],
	"transformIgnorePatterns": ["<rootDir>/node_modules/"],
	"transform": {
		"^.+\\.(ts|tsx)?$": "ts-jest",
		"^.+\\.(js|jsx)$": "babel-jest"
		// "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileTransform.cjs"
	}
}
